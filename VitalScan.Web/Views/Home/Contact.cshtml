@model VitalScan.Web.Controllers.HomeController.ContactVm

<div class="container">
    <div class="row g-4">
        <div class="col-lg-7">
            <h1 class="fw-bold">Contact us</h1>
            <p class="text-muted">We’ll get back to you within one business day.</p>

            @if (Model.Sent)
            {
                <div class="alert alert-success">Thanks! Your message was sent.</div>
            }
            else if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@e.ErrorMessage</div>
                    }
                </div>
            }

            <form method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input class="form-control" asp-for="Name" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input class="form-control" type="email" asp-for="Email" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Phone (optional)</label>
                    <input class="form-control" asp-for="Phone" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Message</label>
                    <textarea class="form-control" asp-for="Message" rows="5" required></textarea>
                </div>
                <button class="btn btn-primary" type="submit">Send message</button>
            </form>
        </div>

        <div class="col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Clinic details</h5>
                    <div class="mb-2"><strong>Hours</strong><br />Mon–Fri 9:00–17:00</div>
                    <div class="mb-2"><strong>Email</strong><br /><a href="mailto:hello@vitalscan.com">hello@vitalscan.com</a></div>
                    <div class="mb-2"><strong>Phone</strong><br />0400 000 000</div>
                    <div class="mb-2"><strong>Address</strong><br />123 High St, Melbourne VIC</div>
                    <div class="ratio ratio-16x9 mt-3">
                        <iframe src="https://www.google.com/maps?q=Melbourne%20VIC&output=embed"
                                style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
