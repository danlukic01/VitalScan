@model List<VitalScan.Web.Controllers.HomeController.ServiceVm>

<div class="container">
  <div class="mb-4">
    <h1 class="fw-bold">Services & Pricing</h1>
    <p class="text-muted">Transparent prices. Simple booking.</p>
  </div>

  <div class="row g-4">
        @foreach (var s in Model)
        {
          <div class="col-md-6">
            <div class="card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-1">@s.Name</h5>
                <div class="text-muted small mb-2">@s.DurationMinutes min</div>
                <p class="card-text flex-grow-1">@s.Description</p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="fw-bold">$@s.PriceAud AUD</div>
                  <a class="btn btn-success" href="/Home/Book?id=@s.Id&name=@Uri.EscapeDataString(s.Name)">Book</a>
                </div>
              </div>
            </div>
          </div>
        }
  </div>

  <div class="mt-5">
    <h5>What to expect</h5>
    <ul>
      <li>Initial consult to understand your goals.</li>
      <li>Non-invasive bioresonance scan using Meta Hunter / LNS.</li>
      <li>Review session and personalised recommendations.</li>
    </ul>
  </div>
</div>
