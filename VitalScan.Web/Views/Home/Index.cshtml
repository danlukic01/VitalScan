@model List<VitalScan.Web.Controllers.HomeController.ServiceVm>

<div class="hero text-center">
    <h1 class="fw-bold">Feel better with bioresonance</h1>
    <p class="lead">Meta Hunter / LNS scans to identify imbalances and support wellness.</p>
</div>

<section id="services" class="row g-4">
    @foreach (var s in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@s.Name</h5>
                    <p class="card-text flex-grow-1">@s.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-bold">$@s.PriceAud AUD</span>
                        <a class="btn btn-success" href="/Home/Book?id=@s.Id&name=@Uri.EscapeDataString(s.Name)">Book</a>
                    </div>
                </div>
            </div>
        </div>
    }
</section>
